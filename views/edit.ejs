<% include ./partials/header %>

<div class='ui main text container segment'>
    <div class='ui huge header'>Edit Review of <%= post.title %></div>
    <form class='ui form' action='/posts/<%= post._id %>?_method=PUT' method='POST'>
        <div class='field'>
            <label>Title</label>
            <input type='text' name='post[title]' placeholder='title' value='<%= post.title %>'>
        </div>
        <div class='field'>
            <label>Album Cover</label>
            <input type='text' name='post[image]' placeholder='image' value='<%= post.image %>'>
        </div>
        <div class='field'>
            <label>Review</label>
            <textarea name='post[body]'><%= post.body %></textarea>
        </div>
        <input class='ui big positive basic button' type='submit'>
    </form>
</div>

<% include ./partials/footer %>